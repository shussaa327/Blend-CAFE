<div class= "container">
  <h1>店舗情報</h1>
  <h4>名前</h4>
  <%= @shop.name %>
  <h4>地域</h4>
  <%= @shop.area %>
  <h4>郵便番号</h4>
  <%= @shop.order_postal_code %>
  <h4>住所</h4>
  <%= @shop.address %>
  <h4>電話番号</h4>
  <%= @shop.phone_number %>
  <h4>営業時間</h4>
  <%= @shop.open_time %>
  ~
  <%= @shop.close_time %>
  <h4>平均予算</h4>
  <%= @shop.min_average_price %>
  ~
  <%= @shop.max_average_price %>円

  <p><%= link_to "店舗情報を編集する", edit_shop_path(@shop) %></p>
  <%= link_to "投稿する", new_shop_post_path(@shop) %>
</div>