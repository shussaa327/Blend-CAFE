<!DOCTYPE html>
<html>
  <head>
    <title>Huuste</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id= "wrapper">
      <header class= "sticky-top">
        <nav class="navbar navbar-expand-md">
          <%= link_to "Huuste", root_path, class: "navbar-brand pr-3" %>
          <div class ="form-inline search">
            <%= form_tag(shops_path, :method => "get") do %>
              <%= text_field_tag :search,"",placeholder: "お店の名前" %>
              <%= submit_tag "検索", :name => nil %>
            <% end %>
          </div>
          <div class="collapse navbar-collapse justify-content-end" id="Navber">
            <ul class="navbar-nav">
              <li class="nav-item pr-2"><%= link_to "Huusteとは？", about_path %></li>
              <% if user_signed_in? %>
                <li class= "nav-item pr-2"><%= link_to "マイページ", user_path(current_user) %></li>
                <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li class="nav-item pr-2"><%= link_to "新規登録", new_user_registration_path %></li>
                <li class="nav-item"><%= link_to "ログイン", new_user_session_path %></li>
              <% end %>
            </ul>
          </div>
        </nav>
      </header>
      <%= yield %>
      <footer>
        <p class="text-center">Copyright © Huuste</p>
      </footer>
    </div>
  </body>
</html>
