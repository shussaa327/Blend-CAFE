<div class = "container">
  <% if user_signed_in? %>
    <% @user.following_user.where.not(id: @user.id).each do |user| %>
      <div class = "row">
        <%= attachment_image_tag user, :user_image, size: "40x40", format: "jpeg", fallback: "default-icon-img.jpeg", class: "rounded-circle" %>
        <%= user.name %>
        <%= render "relationships/follow_link", user: user %>
        <%= link_to "詳細", user_path(user) %>
      </div>
    <% end %>
  <% end %>
</div>