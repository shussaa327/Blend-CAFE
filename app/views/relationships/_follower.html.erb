<div class = "follower_index follow_user_index_content">
  <h4>フォロワー</h4>
  <% if follower_users.count < 1 %>
    <p>フォロワーはいません</p>
  <% else %>
    <table class= "table follow_user_index_table">
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
      <% follower_users.each do |user| %>
        <tr class = "follower_user follow_people">
          <td>
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :user_image, size: "40x40", format: "jpeg", fallback: "default-icon-img.jpeg", class: "rounded-circle" %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "詳細", user_path(user) %></td>
        </tr>
      <% end %>
      <%= paginate follower_users, class: "paginate" %>
    </table>
  <% end %>
</div>
