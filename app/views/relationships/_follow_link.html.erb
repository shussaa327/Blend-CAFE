<% if user_signed_in? %>
  <% unless user == current_user %>
    <div id= "follow_link">
      <% if current_user.following?(user) %>
        <%= link_to "フォロー解除", unfollow_path(user.id), method: :post,class: "btn btn-danger", remote: true %>
      <% else %>
        <%= link_to "フォローする", follow_path(user.id), method: :post,class: "btn btn-primary", remote: true %>
      <% end %>
    </div>
  <% end %>
<% end %>