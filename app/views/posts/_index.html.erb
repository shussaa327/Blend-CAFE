<div class= "post_index">
  <div class= "post_items">
    <% posts.each do |post| %>
      <div class= "post_item">
        <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :image, size: "300x300", format: "jpeg", class: "mt-2" %>
        <% end %>
        <p><%= post.shop.area.area_name %>　　<%= post.shop.name %></p>
      </div>
    <% end %>
    <%= paginate posts, param_name: "posts_pagina", class: "paginate", remote: true %>
  </div>
</div>