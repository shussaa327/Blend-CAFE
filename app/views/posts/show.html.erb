<div class= "container">
  <h1>投稿詳細</h1>
  <h4>コメント</h4>
  <%= @post.comment %>
  <h4>画像</h4>
  <%= attachment_image_tag @post, :image, size: "300x300", format: "jpeg" %>
  <h4>評価</h4>
  <%= @post.rating %>
  <%= link_to "編集する", edit_post_path(@post) %>
  <%= link_to "削除する", post_path(@post), method: :delete, "data-confirm" => "本当に削除してよろしいですか？" %>
</div>
