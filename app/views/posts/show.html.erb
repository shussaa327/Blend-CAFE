<div class= "container">
  <div class= "row post_show_top_contents">
    <div class= "col-10">
      <%= render "users/user_top_info", user: @user %>
    </div>
    <div class= "col-2">
      <%= render "shop_recommendations/index", shop_recommendations: @user.shop_recommendations %>
    </div>
  </div>

  <div class= "tab_menu_contents">
    <ul class= "tab_menu">
      <li>|<a href= "#post_user_show" class= "active">投稿</a></li>
      <li>|<a href= "#post_shop_show">店舗情報</a>|</li>
      <li id= "post_comment_tab"><%= render "post_comments/post_comment_tab", post: @post %>|</li>
    </ul>
  </div>

  <div class= "tab_contents">
    <div id= "post_user_show" class= "row tab tab1">
      <div class= "col-8"><%= attachment_image_tag @post, :image, size: "300x300", format: "jpeg" %></div>
      <div class= "col-4">
        <h4>店舗名</h4>
        <%= link_to @post.shop.name, shop_path(@post.shop_id) %>
        <h6>感想</h6>
        <p><%= @post.comment %></p>
        <h6>評価</h6>
        <p><%= @post.rating %></p>
        <div id= "favorites_button">
          <%= render "favorites/favorite", post: @post %>
        </div>
        <% if @post.user == current_user %>
          <p><%= link_to "投稿を編集する", edit_post_path(@post) %></p>
          <p><%= link_to "投稿を削除する", post_path(@post), method: :delete, "data-confirm" => "本当に削除してよろしいですか？" %></p>
        <% end %>
      </div>
    </div>

    <div id= "post_shop_show" class= "tab tab2">
      <%= render "shops/show", shop: @post.shop %>
    </div>

    <div id= "post_comments" class= "post_comments tab tab3">
      <%= render "post_comments/post_comment", post: @post, post_comment: @post_comment %>
    </div>
  </div>
</div>