<div class = "container">
  <h1>ユーザー 一覧</h1>
  <% @users.each do |user| %>
    <div class = "row">
      <%= attachment_image_tag user, :user_image, size: "40x40", format: "jpeg", fallback: "default-icon-img.jpeg" %>
      <h4>ユーザー名</h4>
      <%= user.name %>
      <%= link_to "詳細", user_path(user) %>
    </div>
  <% end %>
</div>