<div class= "container">
  <% if @user.errors.any? %>
    <div class= "error_explanation">
      <p><%= @user.errors.count %>件の入力の誤りがあります</p>
      <div class= "error_messages">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    </div>
  <% end %>
  <h1>ユーザー編集</h1>
  <%= form_for(@user) do |f| %>
    <%= attachment_image_tag @user, :user_image, size: "40x40", format: "jpeg", fallback: "default-icon-img.jpeg", class: "rounded-circle" %>
    <%= f.attachment_field :user_image %>

    <label>名前</label>
    <%= f.text_field :name,placeholder: "名前" %>
    <%= f.submit "変更を保存する" %>
  <% end %>
</div>