<div class = "user-index">
  <table>
    <tbody>
      <% users.each do |user| %>
        <% unless user == current_user %>
          <tr>
            <td height= "50">
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :user_image, size: "40x40", format: "jpeg", fallback: "default-icon-img.jpeg",class: "rounded-circle" %>
              <% end %>
            </td>
            <td align= "center"><%= user.name %></td>
          </tr>
        <% end %>
      <% end %>
      <%= paginate users, param_name: "users_pagina", class: "paginate" %>
    </tbody>
  </table>
</div>