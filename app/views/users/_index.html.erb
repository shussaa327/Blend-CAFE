<div class = "user-index">
  <table>
    <% if user_signed_in? %>
      <tbody>
        <% users.each do |user| %>
          <% unless user == current_user %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= attachment_image_tag user, :user_image, size: "40x40", format: "jpeg", fallback: "default-icon-img.jpeg",class: "rounded-circle" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= render "users/follow_link", user: user %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    <% end %>
  </table>
</div>