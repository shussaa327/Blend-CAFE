<div class= "favorites_index_content">
  <h1>favorite</h1>
  <% if favorites.blank? %>
    <h6>まだお気に入りが登録されていません</h6>
  <% else %>
    <div class= "favorites_index">
      <% favorites.each do |favorite| %>
        <div class= "favorite_item post_item">
          <%= link_to post_path(favorite.post) do %>
            <%= attachment_image_tag favorite.post, :image, size: "300x300", format: "jpeg", class: "mt-2 rounded" %>
          <% end %>
          <p><%= favorite.post.area.area_name %> 　<%= favorite.post.shop.name.truncate(15) %></p>
        </div>
      <% end %>
      <%= paginate favorites, param_name: "favorites_pagina", class: "paginate", remote: true %>
    </div>
  <% end %>
</div>