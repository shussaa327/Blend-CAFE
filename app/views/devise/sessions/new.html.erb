<div class = "container">
  <div class = "row mt-5">
    <div class= "mx-auto text-center">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field pb-3">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field pb-2">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログインしたままにする" %>
          </div>
        <% end %>

        <div class="actions pt-2 pb-5">
          <%= f.submit "ログイン", class: "pt-1 pb-1 pl-2 pr-2 btn-primary rounded" %>
        </div>
      <% end %>
      <p class= "pb-2">ゲストでのログインはこちら↓</p>
      <%= link_to 'ゲストログイン', homes_guest_sign_in_path, method: :post %>
      <p class= "pb-2">アカウントをお持ちでない方はこちら↓</p>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>